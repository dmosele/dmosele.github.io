    <chapter xml:id="sageinteracttest">
        <title>Math Topics - sage interact</title>
            <section>
                <title>JIT Learning Test</title>
                <worksheet>
                <exercise>
                    <p>What is 2+2? </p>
                    <interactive xml:id="test1" platform="sage" width="100%" aspect="4:2">
                        <slate surface="sage">
                            @interact
                            def _(answer=2, auto=UpdateButton(text="Check")):
                                if answer==4:
                                    print('Correct')
                                else:
                                    print('Incorrect')
                        </slate>
                    </interactive>
                </exercise>

                <exercise>
                    <p>What is the slope of the graph below? </p>
                    <interactive xml:id="test2" platform="sage" width="100%" aspect="4:5">
                        <slate surface="sage">
                            f=2*x+7
                            @interact
                            def _(answer=1, auto=UpdateButton(text="Check")):
                                show(plot(f,(x,-3,3)))
                                if answer==2:
                                    print('Correct')
                                else:
                                    print('Incorrect')
                        </slate>
                    </interactive>
                </exercise>
                
                </worksheet>
            </section>
	</chapter>
    <chapter xml:id="webworktest">
        <title>Math Topics - webwork</title>
            <section>
                <title>JIT Learning Test</title>

                <webwork>
                  <setup>
                    <pg-code>
                      Context("LimitedNumeric");
                      $a = Compute(random(1, 9, 1));
                      $b = Compute(random(1, 9, 1));
                      $c = $a + $b;
                    </pg-code>
                  </setup>

                  <statement>
                    <p>Compute <m><var name="$a"/> + <var name="$b"/></m>.</p>
                    <instruction>Type your answer without using the <c>+</c> sign.</instruction>
                    <p>The sum is <var name="$c" width="2"/>.</p>
                  </statement>

                  <solution>
                    <p><m><var name="$a"/> + <var name="$b"/> = <var name="$c"/></m>.</p>
                  </solution>
                </webwork>
                
                <exercise>
                    <webwork source="Library/ma122DB/set12/s5_4_26.pg" />
                </exercise>
                    
            </section>
    </chapter>
