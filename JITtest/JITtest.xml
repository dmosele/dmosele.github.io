        </introduction>

    <chapter xml:id="webworktest">
        <title>Math Topics</title>
            <section>
                <title>JIT Learning Test</title>
                <worksheet>
                <exercise>
                    <p>What is 2+2? </p>
                    <interactive xml:id="test1" platform="sage" width="100%" aspect="4:2">
                        <slate surface="sage">
                            @interact
                            def _(answer=2, auto=UpdateButton(text="Check")):
                                if answer==4:
                                    print('Correct')
                                else:
                                    print('Incorrect')
                        </slate>
                    </interactive>
                </exercise>

                <exercise>
                    <p>What is the slope of the graph below? </p>
                    <interactive xml:id="test2" platform="sage" width="100%" aspect="4:5">
                        <slate surface="sage">
                            f=2*x+7
                            @interact
                            def _(answer=1, auto=UpdateButton(text="Check")):
                                show(plot(f,(x,-3,3)))
                                if answer==2:
                                    print('Correct')
                                else:
                                    print('Incorrect')
                        </slate>
                    </interactive>
                </exercise>
                
                </worksheet>
            </section>
	</chapter>
</book>

